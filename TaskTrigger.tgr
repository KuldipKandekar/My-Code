trigger TaskTrigger on Task (after insert, after delete) {

    if(trigger.isAfter){
        if(trigger.isInsert){         
            
            EventTaskTriggerHandler.taskHandleAfterInsert(Trigger.new);            
        }
        
        if(trigger.isDelete){
            
            EventTaskTriggerHandler.taskHandleAfterDelete(Trigger.old);            
        }
    }       
}